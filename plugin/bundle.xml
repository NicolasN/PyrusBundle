<?xml version="1.0" encoding="UTF-8"?>
<role version="2.0" xmlns="http://pear2.php.net/dtd/customrole-2.0">
 <name>bundle</name>
 <class>PyrusBundlePlugin\BundleRole</class>
 <autoloadpath></autoloadpath>
 <releasetypes>php</releasetypes>
 <releasetypes>extsrc</releasetypes>
 <releasetypes>extbin</releasetypes>
 <releasetypes>zendextsrc</releasetypes>
 <releasetypes>zendextbin</releasetypes>
 <installable>1</installable>
 <locationconfig>bundle_dir</locationconfig>
 <honorsbaseinstall />
 <unusualbaseinstall>1</unusualbaseinstall>
 <executable />
 <configvar>
  <name>bundle_dir</name>
  <type>string</type>
  <default>../Bundle/</default>
  <doc>The Symfony2 Bundle directory.</doc>
  <prompt>Symfony2 Bundle directory</prompt>
  <group>PyrusBundle</group>
  <configtype>system</configtype>
 </configvar>
</role>